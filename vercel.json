{
  "version": 2,
  "builds": [
    {
      "src": "src",
      "use": "@vercel/node",
      "config": {
        "zeroConfig": true
      }
    },
    {
      "src": "api",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "wsgi": "api:app"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/$1"
    }
  ]
}